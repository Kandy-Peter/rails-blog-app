<div class="form_container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input_form border" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class:"input_form border" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class:"input_btn border" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
